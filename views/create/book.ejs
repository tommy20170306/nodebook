<%- include('../includes/header'); %>

<h1>New Book:</h1>
<br/>
<form method="POST" action="" class="form-horizontal">

	<div class="form-group row">
		<label for="name" class="col-sm-2">Book Name</label> 
		<input id="name" name="name" class="col-sm-10" />
	</div>

	<div class="form-group row">
		<label for="year" class="col-sm-2">Year Published</label> 
		<select id="year" name="year" class="col-sm-10">
			<% for(var i=Year; i>=Year-100; i--) { %>
				<option value=<%= i %>><%= i %></option>
			<% } %>
		</select>
	</div>

	<div class="form-group row">
		<label for="author" class="col-sm-2">Author</label>
		<select id="author" name="author" class="col-sm-10">
			<% for(var i=0; i<AuthorList.length; i++) { %>
				<option value=<%= AuthorList[i] %>><%= AuthorList[i] %></option>
			<% } %>
		</select>
	</div>

	<div class="form-group row">
		<label for="age" class="col-sm-2">Age</label>
		<select id="age" name="age" class="col-sm-10">
			<% for(var i=20; i<100; i++) { %>
				<option value=<%= i %>><%= i %></option>
			<% } %>
		</select>
	</div>
	
	<div class="form-group row">
		<label for="author" class="col-sm-2"></label>
		<input type="submit" class="btn col-sm-1" value="Submit" />
	</div>
</form>

<%- include('../includes/footer'); %>